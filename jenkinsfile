pipeline {
    agent any

    stages {
        stage('Checkout source code') {
            steps{
                sh "echo running "
        }
   }
        stage('Build') {
            steps {
                nodejs(nodeJSInstallationName: 'Node') 
                    sh 'npm install -g node-gyp --save-dev'
                    sh 'npm ci'
                    sh 'npm run start'
                }
            }
        }
    }
