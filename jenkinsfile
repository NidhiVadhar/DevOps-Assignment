pipeline {
    agent any

    stages {
        stage('Checkout source code') {
            steps{
                bat "echo running "
        }
   }
        stage('Build') {
            steps {
                nodejs(nodeJSInstallationName: 'Node') {
                    bat 'npm install -g node-gyp --save-dev'
                    bat 'npm i'
                    bat 'npm run start'
                }
            }
        }
    }
}
