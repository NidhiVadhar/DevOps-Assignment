pipeline {
    agent any

    stages {
        stage('Checkout source code') {
            steps{
                sh "echo running "
                sh "apt-get install python3.9 -y"
            }
        }
        stage('Build') {
            steps {
                nodejs(nodeJSInstallationName: 'Node') {
                    sh 'npm install -g node-gyp'
                    sh 'npm config ls'
                    sh 'npm install'
                    sh 'npm run start'
                }
            }
        }
    }
}
